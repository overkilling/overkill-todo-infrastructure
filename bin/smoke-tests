#!/usr/bin/env bash
#
# Run smoke tests in a runing docker network

set -e

if [ -n "$1" ]; then
    network=$1
    shift
else 
    echo "Error: missing network"
    exit 1
fi

function smoke_test {
    host=$1
    port=$2

    echo "=== $host smoke tests ==="
    docker run \
        --network $network \
        -v $PWD/smoke:/test \
        bluehoodie/smoke -v -f /test/$host.yml -u http://$host -p $port
}

smoke_test api 3000

